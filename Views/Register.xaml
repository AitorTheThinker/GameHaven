<Page x:Class="GameHaven.Views.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Register">
    <Grid Background="#282828">
        <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="pack://application:,,,/GAMEHAVENLOGO.png" Height="300" Width="300" Margin="0,0,0,0"/>

            <Label Content="Register" FontSize="22" Foreground="White" HorizontalContentAlignment="Center" Margin="0,0,0,5"/>
            <Label Content="Username" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" Padding="5" FontSize="14"/>
            <Label Content="Password" Foreground="White" Margin="0,0,0,5" />
            <PasswordBox x:Name="PasswordTextBox" Margin="0,0,0,10" Padding="5" FontSize="14"/>
            <Button Content="Register" Background="White" Foreground="Black" Padding="10,5" Click="Register_Click" Margin="0,0,0,10" FontSize="14"/>
            <Button Content="Go Home" Background="White" Foreground="Black" Padding="10,5" Click="GoHome_Click" FontSize="14"/>
        </StackPanel>
    </Grid>
</Page>
